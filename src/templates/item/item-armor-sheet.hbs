<form class="{{cssClass}} item-form dl-item-form" autocomplete="off">
  {{> "systems/demonlord/templates/item/partial/item-sheet-header.hbs" item=item placeholderName="Armor Name"}}

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="attributes">{{localize "DL.TabsAttributes"}}</a>
    <a class="item" data-tab="description">{{localize "DL.TabsDescription"}}</a>
    {{#if effects}}<a class="item" data-tab="effects">{{localize "DL.TabsEffects"}}</a>{{/if}}
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <section class="sheet-content">
      <div class="tab weapons" data-group="primary" data-tab="attributes">

        <div class="dl-item-section-header row">
          <div class="col-12" style="margin-top: 4px">
            <b>{{item.name}}</b>
          </div>
        </div>
        <hr>

        <div class="dl-item-section-section text-areas">
          <div>
            <b>{{localize "DL.WeaponProperties"}}</b>
            <textarea name="system.properties" placeholder="â€•" autosize>{{system.properties}}</textarea>
            <div style="margin-left: 8px">
              <div class="dl-new-project-2 selectable {{#if system.isShield}}selected{{/if}}"
                   data-tippy-content="{{localize "DL.ArmorIsShield"}}">
                <input type="checkbox" name="system.isShield" {{checked system.isShield}}>
                <i class="dl-icon-shield"></i>
                <span class="sep"></span>
                <span style="width: 64px; text-align: center; text-overflow: ellipsis">{{localize
                  "DL.ArmorShield"}}</span>
              </div>
            </div>
          </div>
        </div>

        <div class="dl-item-section-section">
          <div>
            <b>{{localize "DL.TalentRollAttribute"}}</b>
            <div>
              <div class="dl-new-project-2">
                <i class="dl-icon-agility"></i>
                <span class="sep"></span>
                <span style="width: 64px; text-align: center; text-overflow: ellipsis">{{localize
                  "DL.AttributeAgility"}}</span>
                <span class="sep"></span>
                <input type="number" name="system.agility" value="{{system.agility}}" placeholder="0"/>
              </div>
              <div class="dl-new-project-2">
                <i class="dl-icon-defense"></i>
                <span class="sep"></span>
                <span style="width: 64px; text-align: center; text-overflow: ellipsis">{{localize
                  "DL.AttributeDefense"}}</span>
                <span class="sep"></span>
                <input type="number" name="system.defense" value="{{system.defense}}" placeholder="0"/>
              </div>
              <div class="dl-new-project-2">
                <i class="dl-icon-defense-fixed"></i>
                <span class="sep"></span>
                <span style="width: 64px; text-align: center; text-overflow: ellipsis; overflow: hidden">{{localize
                  "DL.ArmorFixed"}}</span>
                <span class="sep"></span>
                <input type="number" name="system.fixed" value="{{system.fixed}}" placeholder="0"/>
              </div>
            </div>
          </div>
        </div>
        <hr>

        <div class="dl-item-section-section margin">
          <div>
            <b>{{localize "DL.SpellRequirements"}}</b>
            <div>
              {{dlDropdownValue "system.requirement.attribute" system.requirement.attribute "system.requirement.minvalue" system.requirement.minvalue }}
            </div>
          </div>
        </div>
        <hr>

        {{#if system.description}}
          <div class="dl-item-section-description">
            <div><b>{{localize "DL.TabsDescription"}}</b></div>
            <div>
              {{{system.enrichedDescription}}}
            </div>
          </div>
        <hr>
        {{/if}}

        <div class="dl-item-section-section margin">
          <div>
            <b>{{localize "DL.Availability"}}</b>
            <div>
              {{dlAvailabilityDropdown "system.availability" system.availability}}
              <div class="dl-new-project-2" data-tippy-content="{{localize "DL.ItemValue"}}">
                <i class="dl-icon-price"></i>
                <span class="sep"></span>
                <input type="text" name="system.value" value="{{system.value}}" autosize/>
              </div>
            </div>
          </div>
        </div>
        {{#if contents}}<hr>{{>"systems/demonlord/templates/item/partial/item-contents.hbs"}}{{/if}}
      </div>
      {{> "systems/demonlord/templates/item/partial/item-description.hbs"}} {{#if effects}}{{>
    "systems/demonlord/templates/item/partial/item-effects.hbs"}}{{/if}}
    </section>
  </section>
</form>
